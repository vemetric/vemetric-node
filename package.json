{
  "name": "@vemetric/node",
  "repository": {
    "type": "git",
    "url": "https://github.com/vemetric/vemetric-node.git"
  },
  "homepage": "https://vemetric.com/docs/sdks/nodejs",
  "version": "0.1.3",
  "description": "Official Node.js, Bun, Deno SDK for Vemetric",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
